%h1 Listing photos

%table
  %thead
    %tr
      %th Thumbnail
      %th Event
      %th Caption
      %th MD5
      %th Adult content
      %th
      %th
      %th

  %tbody
    - @photos.each do |photo|
      %tr
        %td #{ image_tag photo.media_url, width: 64, height: 64 }
        %td #{ photo.event.name }
        %td #{ photo.caption }
        %td #{ photo.md5 }
        %td #{ photo.adult_content }
        %td #{ link_to 'Show', photo }
        %td #{ link_to 'Edit', edit_photo_path(photo) }
        %td #{ link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } }

%b

